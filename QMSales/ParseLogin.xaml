<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="QMSales.ParseLogin">

  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness">
      <OnPlatform.iOS>
        10, 69, 10, 10
      </OnPlatform.iOS>
      <OnPlatform.Android>
        10, 69, 10, 10
      </OnPlatform.Android>
      <OnPlatform.WinPhone>
        10, 69, 10, 10
      </OnPlatform.WinPhone>
    </OnPlatform>
  </ContentPage.Padding>

	<ContentPage.Content>
		<StackLayout VerticalOptions="StartAndExpand">
			<Image Source="caresuiteHand.png" />
			<Entry x:Name="usernameEntry" Placeholder="Username" />
			<Entry x:Name="passwordEntry" IsPassword="true" Placeholder="Password"/>
			<Button Text="Login" Clicked="Login_Click" x:Name="LoginButton" />
			<Button Text="Sign Up" Clicked="SignUp_Click" x:Name="SignUpButton" />
			<Label x:Name="messageLabel" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
